<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          
          <table class="table table-striped">
            <tr>
              <td class="col-sm-3">ID</td><td><%= task.id %>
              <% if task.user.id == current_user.id %>
                <%= link_to " （詳細）", task %>
              <% end %></td>
            </tr>
            <tr>
              <td>ステータス</td><td><%= task.status %></td>
            </tr>
            <tr>
              <td>タスク</td><td><%= task.content %></td>
            </tr>
          </table>
          
          <% if task.user.id == current_user.id %>
            <p><%= link_to "このタスクを編集する", task %></p>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>